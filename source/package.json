{
  "name": "MainStack",
  "version": "0.1.0",
  "bin": {
    "playtesting-solution": "bin/MainStack.ts"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "cdk": "cdk",
    "install-all": "npm install && npm-run-all iall:*",
    "iall:PlayTestAssociateApplication-lambda": "cd lambdas/PlayTestAssociateApplication && npm install",
    "iall:PlayTestGetGLAppStatus-lambda": "cd lambdas/PlayTestGetGLAppStatus && npm install",
    "iall:PlayTestGetStream-lambda": "cd lambdas/PlayTestGetStream && npm install",
    "iall:PlayTestGLSListApplications-lambda": "cd lambdas/PlayTestGLSListApplications && npm install",
    "iall:PlayTestSessions-lambda": "cd lambdas/PlayTestSessions && npm install",
    "iall:PlayTestStartStream-lambda": "cd lambdas/PlayTestStartStream && npm install",
    "iall:PlayTestStepFunctionCreateStreamGroup-lambda": "cd lambdas/PlayTestStepFunctionCreateStreamGroup && npm install",
    "iall:PlayTestStepFunctionGetSreamGroup-lambda": "cd lambdas/PlayTestStepFunctionGetSreamGroup && npm install",
    "iall:frontend": "cd frontend && npm install",
    "backend-test": "cdk deploy PlaytestingApiStack --require-approval never && node scripts/create-cognito-user.js",
    "update-params": "node scripts/update-parameter-store.js",
    "build-frontend": "cd frontend && npm run build && cd ..",
    "deploy-all": "cdk deploy PlaytestingApiStack --require-approval never && node scripts/create-cognito-user.js && node scripts/update-react-config.js && npm run build-frontend && cdk deploy PlaytestingFrontendStack --require-approval never && npm run update-params",
    "destroy-all": "cdk destroy PlaytestingFrontendStack --require-approval never && cdk destroy PlaytestingApiStack --require-approval never"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "22.7.9",
    "aws-cdk": "^2.1004.0",
    "cdk-nag": "^2.29.14",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3"
  },
  "dependencies": {
    "@aws-cdk/aws-lambda": "^1.204.0",
    "@aws-cdk/aws-stepfunctions": "^1.204.0",
    "@aws-cdk/aws-stepfunctions-tasks": "^1.204.0",
    "@aws-sdk/client-cognito-identity-provider": "^3.777.0",
    "@aws-sdk/client-gameliftstreams": "^3.787.0",
    "@aws-sdk/client-ssm": "^3.775.0",
    "aws-cdk-lib": "^2.163.1",
    "constructs": "^10.4.2",
    "source-map-support": "^0.5.21",
    "xmlhttprequest-ssl": "^2.1.1"
  }
}
